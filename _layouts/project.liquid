---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<style>
  .project-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }
  .project-header h1 {
    text-align: center;
  }
  .project-header p {
    text-align: center;
  }
  .project-authors span {
    padding-left: 10px;
    padding-right: 10px;
    white-space: nowrap;
  }
  .project-links {
    margin-bottom: 1rem;
  }
  .project-links a.btn {
    margin-top: 0;
    margin-bottom: 0;
    color: #ffffff;
    background-color: var(--global-theme-color);
    border: 1px solid var(--global-theme-color);
  }
  .project-links a.btn:hover {
    background-color: var(--global-hover-color);
    border-color: var(--global-hover-color);
  }
  .project article h1 {
    text-align: center;
    font-weight: 500;
  }
  .abstract-container {
    justify-content: center;
    display: flex;
  }
  .abstract-container .abstract-content {
    flex: none;
    width: 80%;
  }
</style>

<div class="project">
  <header class="project-header">
    <h1 class="post-title">{{ page.title }}</h1>
    
    {% if page.description %}
    <p class="project-description">{{ page.description }}</p>
    {% endif %}
    
    {% if page.authors %}
    <p class="project-authors">
      {% for author in page.authors %}
        <span>
          {% if author.url %}
            <a href="{{ author.url }}">{{ author.name }}</a>
          {% else %}
            {{ author.name }}
          {% endif %}
          {% if author.institutions %}
            <sup>
              {% for inst_id in author.institutions %}
                {{ inst_id }}{% unless forloop.last %},{% endunless %}
              {% endfor %}
            </sup>
          {% endif %}
        </span>
      {% endfor %}
    </p>
    
    {% if page.institutions %}
    <p class="project-institutions">
      {% for institution in page.institutions %}
        <sup>{{ institution.id }}</sup> {{ institution.name }}<br>
      {% endfor %}
    </p>
    {% endif %}
    {% endif %}
    
    {% if page.venue %}
    <p class="project-venue">{{ page.venue }}</p>
    {% endif %}
    
    {% if page.links %}
    <div class="project-links">
      {% for link in page.links %}
        <a href="{{ link[1] }}" class="btn btn-sm z-depth-0" role="button">{{ link[0] }}</a>
      {% endfor %}
    </div>
    {% endif %}
  </header>

  <article>
    {% if page.figure %}
    <div class="row mb-4">
      <div class="col-sm mt-3 mt-md-0">
        <img src="{{ page.figure }}" class="img-fluid" alt="main figure">
      </div>
    </div>
    {% endif %}

    {% if page.abstract %}
    <div class="abstract-container">
      <div class="abstract-content">
        <h1>Abstract</h1>
        <p>{{ page.abstract }}</p>
        {% if page.tldr %}
        <p><strong>TLDR:</strong> {{ page.tldr }}</p>
        {% endif %}
      </div>
    </div>
    {% endif %}
    
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>

